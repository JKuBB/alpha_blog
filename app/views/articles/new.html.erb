<h1>Create a new article</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
  
  <p>
    <%= f.label :title %><br/><br/>
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :description %><br/><br/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %> 