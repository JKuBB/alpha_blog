<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-white" %>
          <div class="col-10 mt-2">
            <%= f.text_field :title, class: "form-control shadow rounded text-muted", placeholder: "Title of article" %>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :content, class: "col-2 col-form-label text-white" %>
          <div class="col-10 mt-2">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded text-muted", placeholder: "Content of article"  %>
          </div>
        </div>
          
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-info btn-lg"%>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Return to articles listing ]', articles_path, class:"text-info mb-3" %>
  </div>
</div>